{
  "compilerOptions": {
    "target": "ES2022",                                  
    "module": "commonjs",   
    "allowJs": true,                             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./jest.config.ts",
    "./node_modules",
    "./tests",
    "./build"
  ]
}
